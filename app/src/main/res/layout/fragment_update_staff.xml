<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginHorizontal="10sp"
    android:layout_marginTop="10sp"
    android:padding="10sp"
    tools:context=".fragments.Staff.Staff_Update">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:id="@+id/txt_Ten_Staff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tên"
        android:textSize="24sp"
        android:textStyle="bold" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/til_Ten_Staff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_Ten_Staff">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edt_Ten_Staff"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Ví dụ: Lê Văn A" />
    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:id="@+id/txt_Sdt_Staff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/til_Ten_Staff"
        android:text="Số điện thoại"
        android:textSize="24sp"
        android:textStyle="bold" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/til_Sdt_Staff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_Sdt_Staff">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edt_Sdt_Staff"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Ví dụ: 0123456789" />
    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:id="@+id/txt_Gia_Staff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/til_Sdt_Staff"
        android:text="Địa chỉ"
        android:textSize="24sp"
        android:textStyle="bold" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/til_DiaChi_Staff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_Gia_Staff">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edt_DiaChi_Staff"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Ví dụ: Hà Nội" />
    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:id="@+id/txt_Work_Staff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/til_DiaChi_Staff"
        android:text="Số Ngày Làm"
        android:textSize="24sp"
        android:textStyle="bold" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/til_Work_Staff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_Work_Staff">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edt_Work_Staff"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Ví dụ: 30" />
    </com.google.android.material.textfield.TextInputLayout>


    <TextView
        android:id="@+id/txt_Salary_Staff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/til_Work_Staff"
        android:text="Lương"
        android:textSize="24sp"
        android:textStyle="bold" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/til_Salary_Staff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_Salary_Staff">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edt_Salary_Staff"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Ví dụ: 3000" />
    </com.google.android.material.textfield.TextInputLayout>


    <TextView
        android:id="@+id/txt_Coefficient_Staff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/til_Salary_Staff"
        android:text="Coefficient"
        android:textSize="24sp"
        android:textStyle="bold" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/til_Coefficient_Staff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_Coefficient_Staff">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edt_Coefficient_Staff"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Ví dụ: 11" />
    </com.google.android.material.textfield.TextInputLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnUpdateStaff"
        android:layout_width="150sp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/til_Coefficient_Staff"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10sp"
        android:background="@drawable/custom_bgr_btn_add_update"
        android:text="Cập nhật" />

</RelativeLayout>