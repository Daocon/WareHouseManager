<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="200sp"
    android:layout_gravity="center_vertical"
    android:layout_marginHorizontal="10sp"
    android:background="@drawable/custom_bgr_bot_sheet">

    <TextView
        android:id="@+id/txtConfirm"
        android:layout_width="match_parent"
        android:layout_height="130sp"
        android:gravity="center"
        android:text="Bạn có chắc chắn muốn xóa không?" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70sp"
        android:layout_below="@+id/txtConfirm"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_out_Delete_Staff"
            android:layout_width="0sp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/custom_bgr_btn_delete"
            android:text="Thoát"
            android:textColor="#4696EB" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_confilm_Delete_Staff"
            android:layout_width="0sp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/custom_bgr_btn_delete"
            android:text="Xóa"
            android:textColor="#4696EB" />
    </LinearLayout>

</RelativeLayout>