<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginHorizontal="10sp"
    android:layout_marginTop="10sp"
    android:padding="10sp"
    tools:context=".fragments.delivery.Delivery_add">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:id="@+id/txt_Ten_Dvvc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tên"
        android:textSize="24sp"
        android:textStyle="bold" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/til_Ten_Dvvc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_Ten_Dvvc">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edt_Ten_Dvvc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Ví dụ: VN Express" />
    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:id="@+id/txt_Sdt_Dvvc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/til_Ten_Dvvc"
        android:text="Số điện thoại"
        android:textSize="24sp"
        android:textStyle="bold" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/til_Sdt_Dvvc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_Sdt_Dvvc">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edt_Sdt_Dvvc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Ví dụ: 0123456789" />
    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:id="@+id/txt_Gia_Dvvc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/til_Sdt_Dvvc"
        android:text="Giá đơn vị vận chuyển"
        android:textSize="24sp"
        android:textStyle="bold" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/til_Gia_Dvvc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_Gia_Dvvc">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edt_Gia_Dvvc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Ví dụ: 10.000" />
    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:id="@+id/txt_MaSoThue_Dvvc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/til_Gia_Dvvc"
        android:text="Mã số thuế"
        android:textSize="24sp"
        android:textStyle="bold" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/til_MaSoThue_Dvvc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_MaSoThue_Dvvc">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edt_MaSoThue_Dvvc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Ví dụ: JQK" />
    </com.google.android.material.textfield.TextInputLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnThemDelivery"
        android:layout_width="150sp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/til_MaSoThue_Dvvc"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50sp"
        android:text="Thêm" />
</RelativeLayout>