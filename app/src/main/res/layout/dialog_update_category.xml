<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/custom_bgr_selected_bill_tab"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:theme="@style/Base.Theme.WareHouseManager"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

    <ImageButton
        android:id="@+id/btn_huy_update_item_Category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|top"
        android:background="@drawable/delete"
        android:layout_marginHorizontal="10sp"
        android:layout_marginTop="10sp"

        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sửa thể loại sản phẩm"
        android:layout_gravity="center_horizontal"
        android:textStyle="bold"
        android:textSize="22sp"

        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tên loại sản phẩm"
        android:textStyle="bold"
        android:layout_marginTop="20sp"
        android:textSize="22sp"
        android:layout_marginHorizontal="10sp"
        />
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/tb_update_category"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:errorEnabled="true"
        android:layout_marginHorizontal="10sp"
        android:layout_marginTop="10sp"
        >

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edt_update_ten_loai_sp"
            android:layout_width="match_parent"
            android:layout_height="60sp"
            android:background="@drawable/custom_ed_bgr"
            android:hint="Tên loại sản phẩm"
            android:textColorHighlight="@color/cardview_dark_background" />
    </com.google.android.material.textfield.TextInputLayout>
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_comfilm_update_category"
        android:layout_marginTop="60sp"
        android:layout_width="150sp"
        android:layout_height="wrap_content"
        android:text="SỬA"
        android:background="@drawable/khung_btn_add"
        android:textColor="@color/black"
        android:layout_gravity="center_horizontal"
        android:theme="@style/custom_tv_add_form"
        android:layout_marginBottom="10sp"
        />


</LinearLayout>