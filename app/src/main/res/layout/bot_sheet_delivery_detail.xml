<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/custom_bgr_bot_sheet"
    android:orientation="vertical"
    android:theme="@style/Base.Theme.Bill">

    <TextView
        style="@style/custom_title_add"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="Chi tiết"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textSize="25sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="5dp"
        android:background="#B8B6B6" />

    <TextView
        android:id="@+id/tv_name"
        style="@style/custom_title_add"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tên đvvc: "
        android:textAllCaps="false"
        android:textStyle="normal" />

    <TextView
        android:id="@+id/tv_phone"
        style="@style/custom_title_add"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Số điện thoại: "
        android:textAllCaps="false"
        android:textStyle="normal" />

    <TextView
        android:id="@+id/tv_price"
        style="@style/custom_title_add"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Giá vận chuyển: "
        android:textAllCaps="false"
        android:textStyle="normal" />

    <TextView
        android:id="@+id/tv_tax_code"
        style="@style/custom_title_add"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Mã số thuế: "
        android:textAllCaps="false"
        android:textStyle="normal" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_call"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:layout_weight="1"
            android:src="@drawable/ic_phone" />

        <ImageView
            android:id="@+id/img_sms"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:layout_weight="1"
            android:src="@drawable/sms"
            android:text="Sửa" />
    </LinearLayout>

</LinearLayout>
